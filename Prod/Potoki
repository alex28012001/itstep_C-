#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int main()
{
	FILE * in;
	int a, b;
	if (!(in = fopen("input.txt", "r")))
	{
		printf("Error");
		return 1;
	}
	fscanf(in, "%d%d", &a, &b);
	fclose(in);
	int sum;
	sum = a + b;
	printf("sum = %d", sum);

	return 0;

}

