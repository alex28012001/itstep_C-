#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int main()
{
	FILE * in, *out;
	int a, b;

	if (!(in = fopen("potoki cpp", "r")))
	{
		printf("Error");
		return 1;
	}

	fscanf(in, "%d%d", &a, &b);
	fclose(in);

	if(!(out = fopen("output.txt", "w")))
	{
		printf("Error");
		return 1;
	}

	int sum;
	sum = a + b;
	fprintf(out,"sum = %d", sum);
	fclose(in);

	return 0;

}

